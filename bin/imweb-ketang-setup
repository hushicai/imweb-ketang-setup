#! /usr/bin/env node

var program = require('commander');

program.usage('-c <configuration-file>')
    .option('-c --config <configuration-file>', 'fis插件配置列表，默认当前目录下fis-plugins.js')
    .parse(process.argv);

var fs = require('fs');
var confFile = require('path').join(
    process.cwd(),
    program.config || 'fis-plugins.js'
);


if (!fs.existsSync(confFile)) {
    console.log('当前目录下没有找到默认的fis插件配置文件，请使用自定义的配置文件！');
}
else {
    require('../main').setup(confFile);
}
